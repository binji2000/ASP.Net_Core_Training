@model IEnumerable<EComm.Data.Product>

<table class="table-striped">
    @foreach (var product in Model)
    {
        <tr>
            <td><a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">@product.ProductName</a></td>
            <td>@product.UnitPrice</td>
            <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Edit</a></td>
        </tr>
    }
</table>

