@model EComm.Web.ViewModels.ProductEditViewModel
@{
    ViewData["Title"] = Model.Product.ProductName;
}

<form asp-controller="Product" asp-action="Edit" method="post" class="form-horizontal">
    <h4>Product Edit</h4>
    <hr />
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <label asp-for="Product.ProductName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.ProductName" class="form-control" />
            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Product.SupplierId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Product.SupplierId" asp-items="Model.SupplierChoices" class="form-control"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Product.UnitPrice" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.UnitPrice" class="form-control" />
            <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Product.Package" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.Package" class="form-control" />
            <span asp-validation-for="Product.Package" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Product.IsDiscontinued" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.IsDiscontinued" class="form-control" />
            <span asp-validation-for="Product.IsDiscontinued" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
</form>

@section scripts {
    @Html.Partial("_ValidationScripts")
}